{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/web/src",
  "tags": [],
  "implicitDependencies": ["shared-types"],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/web",
        "index": "apps/web/src/index.html",
        "main": "apps/web/src/main.ts",
        "tsConfig": "apps/web/tsconfig.app.json",
        "verbose": true,
        "polyfills": ["zone.js"],
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/web/public"
          }
        ],
        "styles": ["apps/web/src/styles.css"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "700kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "10kb",
              "maximumError": "15kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/web/src/environments/environment.ts",
              "with": "apps/web/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "staging": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "700kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "10kb",
              "maximumError": "15kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/web/src/environments/environment.ts",
              "with": "apps/web/src/environments/environment.staging.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "web:build:production"
        },
        "development": {
          "buildTarget": "web:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@angular/build:unit-test",
      "outputs": ["{workspaceRoot}/coverage/apps/web"],
      "options": {
        "runner": "vitest",
        "runnerConfig": "apps/web/vitest.config.ts"
      },
      "configurations": {
        "ci": {
          "watch": false,
        "coverage": true,
        "coverageInclude": ["src/**/*.ts"],
        "coverageExclude": [
          "src/**/*.spec.ts",
          "src/**/*.test.ts",
          "src/main.ts"
        ],
          "coverageReporters": ["lcov", "text", "text-summary"],
          "coverageThresholds": {
            "lines": 80,
            "statements": 80,
            "branches": 80,
            "functions": 80
          }
        }
      }
    },
    "test:ci": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/coverage/apps/web"],
      "options": {
        "command": "nx run web:test --configuration=ci"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "web:build",
        "staticFilePath": "dist/web/browser",
        "spa": true
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p apps/web/tsconfig.app.json --noEmit"
      }
    },
    "docs": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/compodoc/web"],
      "options": {
        "command": "npx compodoc -c .compodocrc.json"
      }
    },
    "docs:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx compodoc -c .compodocrc.json --coverageTest=80 --coverageTestShowOnlyFailed --coverageTestThresholdFail true --coverageMinimumPerFile 25"
      }
    },
    "docs:check": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/compodoc/web"],
      "options": {
        "commands": ["nx run web:docs:coverage", "nx run web:docs"]
      }
    }
  }
}
